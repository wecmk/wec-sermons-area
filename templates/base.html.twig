{% extends "base-core.html.twig" %}

{% block title %}WEC{% endblock %}

{% block head %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />

    {{ parent() }}
{% endblock%}

{% block stylesheets %}
    <link href='https://fonts.googleapis.com/css?family=Lato&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='{{ asset('build/app.css') }}' rel='stylesheet' type='text/css'>

{% endblock %}


{% block headjavascript %}
    <!-- LOAD JAVASCRIPT FILES in footer.jsp so page appears faster-->

    {% if not app.debug %}
        <script>
            // Opt-out function
            function gaOptout() {
                document.cookie = disableStr + '=true; expires=Thu, 31 Dec 2099 23:59:59 UTC; path=/';
                window[disableStr] = true;
            }

            // Set to the same value as the web property used on the site
            var gaProperty = 'UA-11498080-3';

            // Disable tracking if the opt-out cookie exists.
            var disableStr = 'ga-disable-' + gaProperty;
            if (document.cookie.indexOf(disableStr + '=true') > -1) {
                window[disableStr] = true;
            }
            // Now load GA. Tracking beacon will not be sent if user has opted out
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                        m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-11498080-3', {'siteSpeedSampleRate': 100});
            ga('send', 'pageview');

        </script>
    {% else %}
        <!-- Google Analytics tracking disabled. Determined development environment. If it is not, please set app.debug to false -->
        <!-- Note: This is separate to the develop config setting -->
    {% endif %}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    {{ parent() }}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
    <div class="header">
        <div class="header-inner-container">
            <div class="row">
                <div class="col-3">
                    <a class="header-link" href="/">
                        <img class="header-logo" src="{{ asset('build/images/wec-logo-full.svg') }}" alt=""/>
                    </a>
                </div>
                <div class="col-9 jumbotron-right">
                    {% block header_right %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>

    {% if breadcrumbs is defined %}
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    {% for key,value in breadcrumbs %}
                        {% if loop.last %}
                            <li class="breadcrumb-item active" aria-current="page">{{ key }}</li>
                            {% else %}
                            <li class="breadcrumb-item"><a href="{{ path(value) }}">{{ key }}</a></li>
                            {% endif %}
                        {% endfor %}
                </ol>                
            </nav>
        </div>
    {% endif %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message alert alert-info container" role="alert">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    {% block content %}
    {% endblock %}

    <div class="footer">
    </div>
{% endblock %}